{
	"title": {
		"type": "plain_text",
		"text": "Assembled Fixer"
	},
	"submit": {
		"type": "plain_text",
		"text": "Submit"
	},
	"blocks": [
		{
			"type": "input",
      "block_id" : "name_block",
			"element": {
				"type": "plain_text_input",
				"action_id": "name_field",
				"placeholder": {
					"type": "plain_text",
					"text": "Enter your name"
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Name"
			}
		},
		{
			"type": "section",
      "block_id" : "timeA_block",
			"text": {
				"type": "mrkdwn",
				"text": "Enter the time you actually took your lunch/break"
			},
			"accessory": {
				"type": "timepicker",
				"initial_time": "13:37",
				"placeholder": {
					"type": "plain_text",
					"text": "Select time",
					"emoji": true
				},
				"action_id": "time_act"
			}
		},
		{
			"type": "section",
      "block_id" : "timeB_block",
			"text": {
				"type": "mrkdwn",
				"text": "When was your break/lunch actually scheduled? "
			},
			"accessory": {
				"type": "timepicker",
				"initial_time": "13:37",
				"placeholder": {
					"type": "plain_text",
					"text": "Select time",
					"emoji": true
				},
				"action_id": "time_set"
			}
		},
		{
			"type": "input",
      "block_id" : "reason_block",
			"element": {
				"type": "plain_text_input",
				"multiline": true,
				"action_id": "reason_input"
			},
			"label": {
				"type": "plain_text",
				"text": "Reason",
				"emoji": true
			}
		}
	],
	"type": "modal",
  "callback_id" : "assembled_mod"
}